  "version": "0.1.0",
  "author": "Tom Kraak",
  "ava": {
    "verbose": "true"
  },
  "main": "app.js",
  "repository": "github.com/betamore/say-hello.git",
  "license": "MIT",
  "bugs": "github.com/betamore/say-hello/issues",
  "homepage": "github.com/betamore/say-hello#readme",
  "devDependencies": {
    "ava": "^0.25.0",
    "husky": "^1.1.4",
    "jsdom": "^13.0.0",
